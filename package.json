{
  "name": "hugo-artifact-action",
  "version": "0.1.0",
  "private": true,
  "description": "A GitHub action used to build the Ace Archive site using Hugo.",
  "homepage": "https://github.com/acearchive/hugo-artifact-action#readme",
  "bugs": {
    "url": "https://github.com/acearchive/hugo-artifact-action/issues"
  },
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acearchive/hugo-artifact-action"
  },
  "author": {
    "name": "Frawley",
    "url": "https://github.com/frawleyskid"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/content-type": "^1.1.5",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.38.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^27.0.4",
    "jest": "^29.1.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "yaml": "^2.1.3"
  }
}
